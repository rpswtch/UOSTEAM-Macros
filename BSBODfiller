  @pushlist 'CraftInfoBS' 0x1B76
  @pushlist 'CraftInfoBS' 0x1B7B
  @pushlist 'CraftInfoBS' 0x1B74
  @pushlist 'CraftInfoBS' 0x1B78
  // Bladed
  @pushlist 'CraftInfoBS' 0x0F5E
  @pushlist 'CraftInfoBS' 0x1441
  @pushlist 'CraftInfoBS' 0x0F52
